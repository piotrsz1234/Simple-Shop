<script src="/ViewScripts/ProductList.js"></script>
<div class="col-8 offset-2">
    <div class="row">
        <div class="col-12 text-center">
            <a asp-action="AddEdit" class="btn btn-success">Add Product</a>
        </div>
    </div>
    <div class="row">
        <div class="row text-left">
            <div class="col-12">
                <div class="mb-3">
                    <label for="txtText" class="form-label">Search</label>
                    <input class="form-control" name="Code" id="txtText" placeholder="Search...">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped table-light" id="tblUsers">
            <thead>
            <tr class="text-center">
                <th scope="col">Name</th>
                <th scope="col">Barcode</th>
                <th scope="col">Price</th>
                <th scope="col">Edit</th>
                <th scope="col">Remove</th>
            </tr>
            </thead>
            <tbody>
            <template id="itemTemplate">
                <tr class="text-center align-middle">
                    <th scope="row">{1}</th>
                    <td>{2}</td>
                    <td>{3}</td>
                    <td>
                        <a class="btn btn-primary" href="/Product/AddEdit?id={0}">Edit</a>
                    </td>
                    <td>
                        <form asp-action="RemoveProduct" asp-controller="Product" method="POST">
                            <input type="hidden" name="ProductId" value="{0}"/>
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Remove</button>
                        </form>
                    </td>
                </tr>
            </template>
            </tbody>
        </table>
    </div>
</div>