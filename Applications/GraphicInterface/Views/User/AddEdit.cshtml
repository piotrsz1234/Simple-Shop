@model Data.Dto.Models.AddEditUserModel?

<form asp-action="AddEdit" METHOD="post">
    @if (Model != null) {
        <input type="hidden" name="Id" value="@Model.Id"/>
    }

    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label for="txtFirstName" class="form-label">First name</label>
                <input class="form-control" name="FirstName" id="txtFirstName" placeholder="First name" value="@Model?.FirstName">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label for="txtLastName" class="form-label">Last name</label>
                <input class="form-control" name="LastName" id="txtLastName" placeholder="Last name" value="@Model?.LastName">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <label for="txtCode" class="form-label">Login Code</label>
                <input class="form-control" name="LoginCode" id="txtCode" placeholder="Login Code" value="@Model?.LoginCode">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @* <div class="form-check"> *@
            @*     <input class="form-check-input" type="checkbox" value="@Model?.IsAdmin" name="IsAdmin" id="flexCheckDefault" > *@
            @*     <label class="form-check-label" for="flexCheckDefault"> *@
            @*         Is Admin *@
            @*     </label> *@
            @* </div> *@

            @Html.CheckBoxFor(x => x.IsAdmin, new { @class = "form-check-input" })
            <label class="form-check-label">
                Is Admin
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button class="btn btn-primary">Save</button>
        </div>
    </div>
</form>