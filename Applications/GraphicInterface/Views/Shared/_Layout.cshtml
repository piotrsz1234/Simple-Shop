@using GraphicInterface.Common
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject SessionHelper SessionHelper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GraphicInterface</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/GraphicInterface.styles.css" asp-append-version="true"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </head>
<body>
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Simple Shop</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                @if (SessionHelper.IsUserLoggedIn && SessionHelper.User!.IsAdmin) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="User" asp-action="UserList">Manage users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Product" asp-action="ProductList">Manage products</a>
                    </li>
                }
                @if (SessionHelper.IsUserLoggedIn) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Register" asp-action="Register">Cash Register</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (SessionHelper.IsUserLoggedIn) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
</body>
</html>